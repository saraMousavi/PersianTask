<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <stroke android:width="1dp" android:color="@color/grey_inactive"></stroke>

                    <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>

                    <corners android:radius="5dp"></corners>
                </shape>
            </item>

            <item android:right="5dp">
                <bitmap android:gravity="right" android:src="@drawable/spinner_arrow_down" />
            </item>

        </layer-list>

    </item>

</selector>